<p id="notice"><%= notice %></p>

<div class="panel panel-default">
<div class="panel-heading"><h1>Listing Pins</h1></div>
<div class="panel-body">


<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <div id="pins" class="transitions-enabled">
    <% @pins.each do |pin| %>
    <div class="box">
      <div class="panel panel-default">
        <%= link_to image_tag(pin.image.url(:medium)), pin %><br/>
        <div class="panel-body">
        <%= pin.description %><br/>
      </div>
        <% if pin.user == current_user %> 
       <%= link_to 'Edit', edit_pin_path(pin) %><br/>
        <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %><br/>
        <% end %>
        </div>
    <% end %>
</div>
</div>
</div>

<br/>

<%= link_to 'New Pin', new_pin_path , class: 'btn btn-default'%>
